{
  "manifest_version": 3,
  "name": "URL Sender",
  "version": "1.0",
  "description": "Send current URL to server with Shift+Alt+O",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "commands": {
    "send-url": {
      "suggested_key": {
        "default": "Shift+Alt+O"
      },
      "description": "Send current URL to server"
    }
  }
}
